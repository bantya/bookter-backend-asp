
@{
    ViewBag.Title = "Login";
}

                <div class="content">
                    <div class="input-box">
                        <div class="input-header">
                            <h2>Please log-in</h2>
                        </div>
                        <div class="input-form">
                            <form method="post">
                                <label for="uname">Username/Email:</label>
                                <br />
                                <input class="input" type="text" name="uname" id="uname" autocomplete="off" autofocus required>
                                <br />
                                <label for="upass">Password:</label>
                                <br />
                                <input class="input" type="password" name="upass" id="upass" autocomplete="off" required>
                                <div class="input-actions">
                                    <button class="button" type="submit">Log-in</button>

                                    <a class="a-button" href="/Account/Forgot">Forgot password ??</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
           


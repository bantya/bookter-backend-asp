
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>

<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link href="https://fonts.googleapis.com/css2?family=Miriam+Libre:wght@400;700&display=swap" rel="stylesheet">
    <script src="js/script.js" defer></script>
</head>

<body>
    <div class="container">
        <div class="wrapper">
            <!-- HEADER -->
            <header class="navbar">
                <div class="logo">
                    <a href="#"><i class="fas fa-book"></i></a>
                </div>
                <div class="search-container">
                    <input class="input" type="text" id="search-input" placeholder="Search me.." autocomplete="off">
                    <span class="search-icon">
                        <i class="fas fa-search"></i>
                    </span>
                </div><!-- div.search-container-->
                <nav class="nav-menu">
                    <ul class="nav-list">
                        <li class="menu-item"><a href="#">Home</a></li>
                        <li class="menu-item"><a href="posts.html">Posts</a></li>
                        <li class="menu-item"><a href="book.html">Books</a></li>
                        <li class="menu-item"><a href="/Admin/Registration">Register</a></li>
                        <li class="menu-item active"><a href="/Admin/Login">Login</a></li>
                    </ul> <!-- ul.nav-list -->
                </nav> <!-- div.nav-menu-->
            </header> <!-- HEADER -->
            <!-- MAIN CONTENT -->
            <div class="content-wrapper">
                <div class="content">
                    <div class="input-box">
                        <div class="input-header">
                            <h2>Admin log-in</h2>
                        </div>
                        <div class="input-form">
                            <form method="post">
                                <label for="uname">Username/Email:</label>
                                <br />
                                <input class="input" type="text" name="uname" id="uname" autocomplete="off" autofocus required>
                                <br />
                                <label for="upass">Password:</label>
                                <br />
                                <input class="input" type="password" name="upass" id="upass" autocomplete="off" required>
                                <div class="input-actions">
                                    <button class="button" type="submit">Log-in</button>
                                    <a class="a-button" href="forgot.html">Forgot password ??</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div> <!-- MAIN CONTENT -->
            <!-- FOOTER -->
            <footer>
                <div class="upper-footer">
                    <div class="footer-list-container">
                        <p class="footer-list-title">ESSENTIALS</p>
                        <ul class="footer-pages-list">
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                    <div class="footer-list-container">
                        <p class="footer-list-title">PAGES</p>
                        <ul class="footer-pages-list">
                            <li><a href="#">Payment Security</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms and Conditions</a></li>
                        </ul>
                    </div>
                    <div class="footer-list-container">
                        <p class="footer-list-title">SOCIAL</p>
                        <ul class="footer-social-list">
                            <li><a href="#">YouTube</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Instagram</a></li>
                        </ul>
                    </div>
                </div>
                <div class="lower-footer">
                    &copy; 2020-20xx bookter.in
                </div>
            </footer> <!-- FOOTER -->
        </div>
    </div>
</body>

</html>



@using BOL
@{
    Customer customer = (Customer)this.Session["user"];
}

<!DOCTYPE html>
<html>

<head>
    <title>Bookter.in</title>
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Miriam+Libre:wght@400;700&display=swap" rel="stylesheet">
    @*<script src="js/script.js" defer></script>*@
</head>

<body>
    <div class="container">
        <div class="wrapper">
            <header class="navbar">
                <div class="logo">
                    <a href="/posts"><i class="fas fa-book"></i></a>
                </div>
                <div class="search-container">
                    <input class="input" type="text" id="search-input" placeholder="Search me.." autocomplete="off">
                    <span class="search-icon">
                        <i class="fas fa-search"></i>
                    </span>
                </div><!-- div.search-container-->
                <nav class="nav-menu flex flex-row">
                    <ul class="nav-list">
                        <li class="menu-item"><a href="index.html">Home</a></li>
                        <li class="menu-item"><a href="/posts">Posts</a></li>
                        <li class="menu-item"><a href="/books">Books</a></li>
                        @if (customer == null)
                        {
                            <li class="menu-item"><a href="/register">Register</a></li>
                            <li class="menu-item active"><a href="/login">Login</a></li>
                            //n? to = @this.Session["lastPage"]
                        }
                        else
                        {
                            <li class="menu-item"><a href="/orders">Orders</a></li>
                            <li class="menu-item"><a href="/wishlist">Wishlist</a></li>
                        }

                        <!-- <li class="menu-item pointer"> -->
                        <!-- <img class="image rounded" src="http://placeholder.code/40x40/RT/40/845206/201256" alt="Profile Pic"> -->
                        <!-- </li> -->

                        <li class="menu-item"><a href="/cart"><i class="fas fa-cart-plus"></i></a></li>
                    </ul> <!-- ul.nav-list -->

                    @if (customer != null)
                    {
                        <div class="user-profile-pic rounded flex flex-center pointer m-l-medium relative">
                            <div class="pofile-pic-wrapper profile-pic-flair rounded" id="profile-pic">
                                <img class="image rounded" src="@customer.image" height="40" width="40" alt="Profile Pic">
                            </div>
                            <div class="profile-pic-menu hidden absolute bg-white flex flex-column no-wrap radius bg-white shadow-light border m-t-normal right-bottom zindex-8" id="profile-pic-menu">
                                <a href="/me" class="anchor">
                                    <div class="flex flex-row p-y-medium p-x-wide radius hover-bg-gray-darker">
                                        <p>Profile</p>
                                    </div>
                                </a>
                                <a href="/settings" class="anchor">
                                    <div class="flex flex-row p-y-medium p-x-wide radius hover-bg-gray-darker">
                                        <p>Settings</p>
                                    </div>
                                </a>
                                <!-- <a href="/logout" class="anchor"> -->
                                <div class="flex flex-row p-y-medium p-x-wide radius hover-bg-gray-darker">
                                    <p>Logout</p>
                                </div>
                                <!-- </a> -->
                                <div class="flex flex-row p-y-medium p-x-wide radius hover-bg-gray-darker">
                                    <input type="checkbox" id="checkbox-toggle" class="toggle toggle-medium">
                                </div>
                            </div>
                        </div>
                    }

                </nav> <!-- div.nav-menu-->
            </header>

            <div class="content-wrapper">
                @RenderBody()
            </div>
            <!-- FOOTER -->
            <footer>
                <div class="upper-footer">
                    <div class="footer-list-container">
                        <p class="footer-list-title">ESSENTIALS</p>
                        <ul class="footer-pages-list">
                            <li><a href="contactus.html">Contact Us</a></li>
                            <li><a href="/aboutus">About Us</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                    <div class="footer-list-container">
                        <p class="footer-list-title">PAGES</p>
                        <ul class="footer-pages-list">
                            <li><a href="#">Payment Security</a></li>
                            <li><a href="/privacy">Privacy Policy</a></li>
                            <li><a href="#">Terms and Conditions</a></li>
                        </ul>
                    </div>
                    <div class="footer-list-container">
                        <p class="footer-list-title">SOCIAL</p>
                        <ul class="footer-social-list">
                            <li><a href="#">YouTube</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Instagram</a></li>
                        </ul>
                    </div>
                </div>
                <div class="lower-footer">
                    &copy; 2020-20xx bookter.in
                </div>
            </footer> <!-- FOOTER -->
        </div>
    </div>
    <!-- Pofile pic menu -->
    <script>
        let profilePic = document.querySelector('#profile-pic');
        let profilePicMenu = document.querySelector('#profile-pic-menu');
        profilePic.addEventListener("click", e => {
            if (e.target != profilePicMenu) {
                profilePicMenu.classList.toggle('hidden');
            }
        }, true);
    </script>
    <script>
        let goDark = document.querySelector('#checkbox-toggle');
        goDark.addEventListener("click", e => {
            if (e.target.checked) {
                document.body.classList.add('dark')
            } else {
                document.body.classList.remove('dark')
            }
        }, false);
    </script>
</body>

</html>


